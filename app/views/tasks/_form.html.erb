<%= form_for(task) do |f| %>

<% if task.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% task.errors.full_messages.each do |message| %>

          <li>
<%= message %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>

<%= f.label :status, 'ステータス' %>

<%= f.select :status, [["未着手"], ["遂行中"], ["完了"]] %>

<%= f.label :content, 'タスク' %>

  
<%= f.text_field :content %>


  
<%= f.submit '確定する' %>

<% end %>