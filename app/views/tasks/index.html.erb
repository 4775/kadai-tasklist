<h1>タスク一覧</h1>

<% if @tasks.any? %>
<table class="table table-striped">
      <thead>
      <tr>
        <th>ステータス</th>
        <th>タスク内容</th>
        <th class="text-right">詳細</th>
      </tr>
    </thead>
    <tbody>
<% @tasks.each do |task| %>
<tr>
<td class="">
<%= task.status %>
</td>
<td>
<%= task.content %>
</td>
<td>
  <div class="text-right">
<%= link_to '詳細/編集', task, class: 'btn btn-primary' %>
</div>
</td>
</tr> 
<% end %>
</tbody>
</table>
    
<%= paginate @tasks %>

  </div>
<% end %>